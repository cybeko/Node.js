<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
	<script>
		window.onload = function() {
			var tbody = document.getElementsByTagName('tbody')[0];
			tbody.addEventListener('click', function(e) {
				if (e.target.hasAttribute('id')) {
					if (e.target.classList.contains('edit')) {
						var xhr = new XMLHttpRequest();
						xhr.open('GET', e.target.id);
						xhr.send();
						xhr.onload = function() {
							location.href = '/edit/' + e.target.id;
						};
					} else if (e.target.classList.contains('delete')) {
						var xhr = new XMLHttpRequest();
						xhr.open('DELETE', '/edit/' + e.target.id);
						xhr.send();
						xhr.onload = function() {
							location.href = '/';
						};
					}
				}
			});
		}
	</script>
</head>
<body>
	<div class="panel panel-primary">
		<h1>Groups</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Group ID</th>
					<th>Term</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<%- data %>
			</tbody>
		</table>
	</div>

	<%- buttons ? '<a href="add" class="btn btn-lg btn-info">Add Student!</a><a href="/" class="btn btn-lg btn-info">Done!</a>' : '<a href="edit" class="btn btn-lg btn-info">Edit Groups!</a>' %>
</body>
</html>
